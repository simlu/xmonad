Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , border = NoBorder
       , borderColor = "#333"
       , allDesktops = True
       , overrideRedirect = True
       , hideOnStart = False
       , persistent = True
       , lowerOnStart = True
       , commands = [ Run Weather "CYLW" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 3600
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run StdinReader
                    , Run Com "dropbox" ["status"] "dropbox" 50
                    , Run Swap [] 10
    		    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %cpu% | %memory% * %swap% }{ %StdinReader% | %CYLW% | <fc=lightblue>%dropbox%</fc> | <fc=#ee9e00>%date%</fc> "
       }
